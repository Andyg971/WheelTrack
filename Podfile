# Uncomment the next line to define a global platform for your project
platform :ios, '15.0'

target 'WheelTrack' do
  # Comment the next line if you don't want to use dynamic frameworks
  use_frameworks!

  # Pods for WheelTrack
  pod 'Charts'           # Pour les graphiques
  pod 'Alamofire'        # Pour les requêtes réseau
  pod 'Kingfisher'       # Pour le chargement d'images
  pod 'RealmSwift'       # Pour la base de données locale
  pod 'SnapKit'          # Pour les contraintes de mise en page
  pod 'IQKeyboardManagerSwift'  # Pour la gestion du clavier
  pod 'SwiftDate'        # Pour la manipulation des dates
  pod 'NotificationBannerSwift'  # Pour les notifications
  pod 'SkeletonUI'       # Pour les états de chargement
  pod 'SwiftLint'        # Pour le linting du code

  target 'WheelTrackTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Quick'
    pod 'Nimble'
  end

end 